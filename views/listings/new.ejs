<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">

    <br>

  <h2>Create a New Listing</h2>
  <br>

  <form action="/listings" method="post">
    <div>
      <label for="title" class="form-lable">Title</label>
      <input type="text"
       name="listing[title]"
       placeholder="Add a catchy title" 
       class="form-control">
    </div>

<br>
    <div>
      <label for="description" class="form-lable">Description</label>
      <textarea name="listing[description]"
       placeholder="Enter description"
       cols="10" rows="5"
       class="form-control">
      </textarea>
    </div>

<br>
   
    <div>
      <label for="image" class="form-lable">Image Link</label>
      <input type="text"
       name="listing[image]" 
       placeholder="Enter image URL/Link"
       class="form-control"
       >
    </div>

 <br>

    <div class="row">

    <div class="col-md-4">
      <label for="price" class="form-lable">Price</label>
      <input type="number" 
      name="listing[price]" 
      placeholder="Enter price"
      class="form-control" >
    </div>
   
 <br>
    
    <div class="col-md-8">
      <label for="country" class="form-lable">Country</label>
      <input type="text"
       placeholder="Enter country" 
       name="listing[country]"
       class="form-control">
    </div>
  </div>

  <br>

    <div>
      <label for="location" class="form-lable">Location</label>
      <input type="text"
       placeholder="Ex: Margao, Goa"
       name="listing[location]"
       class="form-control">
    </div>
    
  <br>

    <button class=" btn add-btn">Add</button>

  </form>

  <br>
  <br>

</div>
</div>
